{
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist/",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    }
}